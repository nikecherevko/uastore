{% extends "AdminAdminPanelBundle::main.html.twig" %}

{% form_theme form 'AdminCommonBundle:Form:fields.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/admincategory/css/main.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/admincategory/css/form.css') }}" rel="stylesheet" />
{% endblock %}

{% block contenttitle %}<h1>Категории товаров</h1>{% endblock %}

{% block body -%}
    
{{ include('adminpanel/menu/route.html.twig', { 'name': 'admin_category' }) }}     
    
<div class="box box-primary">
    <div class="box-header"><h2>Создание категории</h2></div>
    <div class="box-info">  
        {{ form_start(form) }}

        {{ form_row(form.title) }}

        <div class="form_row">
            <div class="admin-form-label">{{ form_label(form.file) }}</div>
            <div class="admin-form-input">
                <span class="btn btn-default btn-file">    
                    <span class="label-image">Выберите файл...</span>{{ form_widget(form.file) }}
                </span>  
            </div>

            <div class="admin-form-error"></div>      
            <div class="admin-form-error">{{ form_errors(form.file) }}</div>      
            <div class="height-15"></div>      
        </div>

        <div class="signup-submit">
            <div id="fileupload"></div>
        </div>

        <div class="form_row">
            <div class="admin-form-label">{{ form_label(form.visible) }}</div>
            <div class="admin-form-input">{{ form_widget(form.visible) }}
                <label for="admin_categorybundle_category_visible"></label>
            </div>
            <div class="admin-form-error">{{ form_errors(form.visible) }}</div>      
            <div class="height-15"></div>      
        </div>    

        <div class="signup-submit">
            <span>
                <input class="btn btn-primary  btn-flat" type="submit" value="Добавить категорию">
            </span>
        </div>   

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/admincategory/js/imageupload.js') }}"></script>
{% endblock %}
{% extends "AdminAdminPanelBundle::main.html.twig" %}

{% form_theme edit_form 'AdminCommonBundle:Form:fields.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/adminfinance/css/main.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/adminfinance/css/form.css') }}" rel="stylesheet" />
{% endblock %}

{% block contenttitle %}<h1>Финансы</h1>{% endblock %}

{% block body -%}
{{ include('adminpanel/menu/route.html.twig', { 'name': 'admin_finance' }) }}    
<div class="box box-primary">
    <div class="box-header"><h2>Создание способа оплаты</h2></div>
    <div class="box-info"> 
        {% for flashMessage in app.session.flashbag.get('notice_success') %}
        <div id="notice-box" class="alert alert-success">
            {{ flashMessage }}
        </div>
        {% endfor %} 
        
        {{ form_start(edit_form) }}

        {{ form_row(edit_form.name) }}
        {{ form_row(edit_form.description) }}
        {{ form_row(edit_form.rate) }}
        
        <div class="form_row">
            <div class="admin-form-label">{{ form_label(edit_form.active) }}</div>
            <div class="admin-form-input">{{ form_widget(edit_form.active) }}
                <label for="admin_financebundle_payment_active"></label>
            </div>
            <div class="admin-form-error">{{ form_errors(edit_form.active) }}</div>      
            <div class="height-15"></div>      
        </div> 

        <div class="signup-submit">
            <span>
                <input class="btn btn-primary  btn-flat" type="submit" value="Добавить">
            </span>
        </div>   

        {{ form_end(edit_form) }}
    </div>
</div>
{% endblock %}

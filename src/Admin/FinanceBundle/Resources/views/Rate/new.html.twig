{% extends "AdminAdminPanelBundle::main.html.twig" %}

{% form_theme form 'AdminCommonBundle:Form:fields.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/adminfinance/css/main.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/adminfinance/css/form.css') }}" rel="stylesheet" />
{% endblock %}

{% block contenttitle %}<h1>Финансы</h1>{% endblock %}

{% block body -%}
{{ include('adminpanel/menu/route.html.twig', { 'name': 'admin_finance' }) }}    
<div class="box box-primary">
    <div class="box-header"><h2>Добавление валюты обмена</h2></div>
    <div class="box-info">  
        {{ form_start(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.rate) }}
        
        <div class="signup-submit">
            <span>
                <input class="btn btn-primary  btn-flat" type="submit" value="Добавить">
            </span>
        </div>   

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

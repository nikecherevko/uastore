<div class="col-md-4">
<div class="box box-primary">
    <div class="box-header"><h2>Курс валют</h2></div>
    <div class="box-info">
        <div id="boxindex">    
            {% for flashMessage in app.session.flashbag.get('notice_success') %}
            <div id="notice-box" class="alert alert-success">
                {{ flashMessage }}
            </div>
            {% endfor %}    
            <ul>    
                {% if entities %}
                {% for entity in entities %}
                <li id="li-container{{entity.id}}"> 
                    <div class="li-content-container">    
                        <div class="li-content">
                            {{ entity.name }}
                            <span class="label pull-right bg-green">{{ entity.rate }} гр.</span>
                        </div>
                        <br>
                        <div id="categorysub_{{entity.id}}" class="li-content-both"> </div>
                        <div class="height10"></div>
                    </div>    
                </li>
                {% endfor %}
                {% else %}
                    <li>Валют нет. </li>
                {% endif %} 
            </ul>
        </div>  
        <br>
        <div class="li-content">
            <div>   
                <a href="{{ path('admin_finance_rate') }}">
                    <button type="button" class="btn btn-warning btn-xs">Изменить курс </button>
                </a> 
            </div>
        </div> 
    </div>  
    <br> 
    <br> 
</div>    
</div>    

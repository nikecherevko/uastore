{% extends "AdminAdminPanelBundle::main.html.twig" %}

{% form_theme form 'AdminCommonBundle:Form:fields.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/admincommon/css/main.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/admincommon/css/form.css') }}" rel="stylesheet" />
{% endblock %}

{% block contenttitle %}<h1>Цвет</h1>{% endblock %}

{% block body -%}
    
{{ include('adminpanel/menu/route.html.twig', { 'name': 'admin_common' }) }}    
    
<div class="box box-primary">
    <div class="box-header"><h2>Создание цвета</h2></div>
    <div class="box-info">  
        {{ form_start(form) }}

        {{ form_row(form.nameru) }}
        {{ form_row(form.nameeng) }}
        {{ form_row(form.hex) }}

        <div class="signup-submit">
            <span>
                <input class="btn btn-primary  btn-flat" type="submit" value="Добавить цвет">
            </span>
        </div>   

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/admincommon/js/jscolor.js') }}"></script>
{% endblock %}


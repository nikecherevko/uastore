{% extends "AdminAdminPanelBundle::main.html.twig" %}

{% form_theme form 'AdminCommonBundle:Form:fields.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/adminnotebook/css/main.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/adminnotebook/css/form.css') }}" rel="stylesheet" />
{% endblock %}

{% block contenttitle %}<h1>Ноутбуки</h1>{% endblock %}

{% block body -%}
{{ include('adminpanel/menu/route.html.twig', { 'name': 'admin_notebook' }) }}    
<div class="box box-primary">
    <div class="box-header"><h2>Создание свойства в категории: <span class='black'>{{category}}</span></h2></div>
    <div class="box-info">  
        {% for flashMessage in app.session.flashbag.get('notice_success') %}
            <div id="notice-box" class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}  
        {{ form_start(form) }}

        {{ form_row(form.property) }}
        {{ form_row(form.value) }}
        
        <div class="form_row">
            <div class="admin-form-label">{{ form_label(form.file) }}</div>
            <div class="admin-form-input">
                <span class="btn btn-default btn-file">    
                    <span class="label-image">Выберите файл...</span>{{ form_widget(form.file) }}
                </span>  
            </div>
            <div class="admin-form-error"></div>      
            <div class="admin-form-error">{{ form_errors(form.file) }}</div>      
            <div class="height-15"></div>      
        </div>
        <div class="signup-submit">
            <div id="fileupload"></div>
        </div>
        <div class="signup-submit">
            <span>
                <input class="btn btn-primary  btn-flat" type="submit" value="Добавить">
            </span>
        </div>   
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/adminnotebook/js/imageupload.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/adminnotebook/js/changevalue.js') }}"></script>
{% endblock %}
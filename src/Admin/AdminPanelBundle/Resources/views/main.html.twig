<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <title>{% block title %}Admin panel{% endblock %}</title>
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/jquery-ui.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/sweetalert.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/admin.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/form.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/cssmenu.css') }}" rel="stylesheet" />
        <link href="{{ asset('bundles/admincommon/css/common.css') }}" rel="stylesheet" />
        <link href="{{ asset('bundles/adminadminpanel/css/main.css') }}" rel="stylesheet" />
        
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div id="container_admin">
        <header class="main-header">
            <a class="logo" href="{{ path('homepage_admin') }}">
                <span class="logo-lg">
                    <b>Admin</b>Store
                </span>
            </a> 
            <nav class="navbar navbar-static-top" role="navigation">
                <div class="btmm">
                    <a href="{{ path('mycart') }}">
                        <button type="button" class="btn btn-warning btn-xs mar20">+ Оформить заказ</button>
                    </a>
                    <a href="{{ path('admin_notebook_new') }}">
                        <button type="button" class="btn btn-success btn-xs mar20">+ Ноутбук</button>
                    </a>
                        
                    <a href="/logout">
                        <button type="button" class="btn btn-yellow btn-xs mar20">Logout</button>
                    </a>                
               </div>    
            </nav>    
        </header> 
        <aside class="main-sidebar">
            <section class="sidebar" style="height: auto;">
                 
                {{ render(controller('AdminAdminPanelBundle:Index:getUserData')) }}
                
                <ul class="sidebar-menu" >
                    <li class="header">МЕНЮ АДМИНИСТРАТОРА</li> 
                    <li>
                        {{ render(controller('AdminAdminPanelBundle:Index:menu')) }}
                    </li>
                </ul>    
            </section>   
        </aside>
        <div class="content-wrapper">  
            <section class="content-header">
                {% block contenttitle %}{% endblock %}
            </section>
            <section class="content">
                {% block body %}{% endblock %}
            </section>   
        </div>
          
        <script type="text/javascript" src="{{ asset('js/jquery-2.1.3.min.js') }}"></script> 
        <script type="text/javascript" src="{{ asset('bundles/adminadminpanel/js/cssmenu.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery-ui.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/sweetalert.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/getroute.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/admin.js') }}"></script>
            
        {% block javascripts %} {% endblock %}
    </div>    
    </body>
</html>

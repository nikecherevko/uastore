{% extends "AdminAdminPanelBundle::main.html.twig" %}

{% form_theme edit_form 'AdminCommonBundle:Form:fields.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/admininfo/css/main.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/admininfo/css/form.css') }}" rel="stylesheet" />
{% endblock %}

{% block contenttitle %}<h1>Информационные страницы</h1>{% endblock %}

{% block body -%}
{{ include('adminpanel/menu/route.html.twig', { 'name': 'admin_info' }) }}     
<div class="box box-primary">
    <div class="box-header"><h2>Редактирование страницы</h2></div>
    <div class="box-info"> 
        
        {% for flashMessage in app.session.flashbag.get('notice_success') %}
        <div id="notice-box" class="alert alert-success">
            {{ flashMessage }}
        </div>
        {% endfor %} 
        
        {{ form_start(edit_form) }}

        {{ form_row(edit_form.category) }}
        {{ form_row(edit_form.title) }}
        
        <div class="admin-form-label">{{ form_label(edit_form.description) }}</div>
        <div class="textarea-page"> {{ form_widget(edit_form.description) }}</div>
        <br>
        <div class="signup-submit">
            <span>
                <input class="btn btn-primary  btn-flat" type="submit" value="Сохранить">
            </span>
        </div>   

        {{ form_end(edit_form) }}
    </div>
</div>
{% endblock %}
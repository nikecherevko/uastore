{% extends "AdminAdminPanelBundle::main.html.twig" %}

{% block stylesheets %}
    <link href="{{ asset('bundles/admincontact/css/main.css') }}" rel="stylesheet" />
{% endblock %}

{% block contenttitle %}<h1>Обратная связь</h1>{% endblock %}

{% block body -%}
{{ include('adminpanel/menu/route.html.twig', { 'name': 'admin_contact' }) }}   
<div class="box box-primary">
    <div class="box-header"><h2>Перезвонить</h2></div>
    <div class="box-info">
        <div id="boxindex">    
            <ul>    
                {% if entities %}
                {% for entity in entities %}
                <li id="li-container{{entity.id}}"> 
                    <div class="li-content-container">    
                        <div class="li-content"> <b>{{ entity.telephone }}</b>  <small>{{ entity.created|date('H:i  d-m-Y') }}</small></div>
                        <div class="li-content-button">
                            <div class="confitem{{entity.id}}">
                                <button type="button" class="btn btn-danger btn-sm" onclick="confirmprocess({{entity.id}})">удалить</button>
                            </div>
                        </div>
                        <br>
                        <div id="categorysub_{{entity.id}}" class="li-content-both"> </div>
                        <div class="height10"></div>
                    </div>    
                </li>
                {% endfor %}
                {% else %}
                    <li>Все обработано. </li>
                {% endif %} 
            </ul>
        </div>  
    </div>  
    <br> 
    <br> 
</div>    
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/admincontact/js/confirm.js') }}"></script>
{% endblock %}




 
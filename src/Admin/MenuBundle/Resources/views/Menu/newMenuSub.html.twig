{% extends "AdminAdminPanelBundle::main.html.twig" %}

{% form_theme form 'AdminCommonBundle:Form:fields.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/adminmenu/css/main.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/adminmenu/css/form.css') }}" rel="stylesheet" />
{% endblock %}

{% block contenttitle %}<h1>Меню</h1>{% endblock %}

{% block body -%}
    
{{ include('adminpanel/menu/route.html.twig', { 'name': 'admin_menu' }) }}

<div class="box box-primary">
    <div class="box-header"><h2>Создание пункта меню в: <span class='black'>{{category}}</span> </h2></div>
    <div class="box-info">  
        {{ form_start(form) }}

        {{ form_row(form.title) }}
        {{ form_row(form.path) }}

        <div class="signup-submit">
            <span>
                <input class="btn btn-primary  btn-flat" type="submit" value="Добавить категорию">
            </span>
        </div>   

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
{% extends "AdminAdminPanelBundle::main.html.twig" %}

{% form_theme edit_form 'AdminCommonBundle:Form:fields.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/adminmenu/css/main.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/adminmenu/css/form.css') }}" rel="stylesheet" />
{% endblock %}

{% block contenttitle %}<h1>Меню</h1>{% endblock %}

{% block body -%}
    
{{ include('adminpanel/menu/route.html.twig', { 'name': 'admin_menu' }) }}
    
<div class="box box-primary">
    <div class="box-header"><h2>Редактирование категории</h2></div>
    <div class="box-info">
        
        {% for flashMessage in app.session.flashbag.get('notice_success') %}
        <div id="notice-box" class="alert alert-success">
            {{ flashMessage }}
        </div>
        {% endfor %} 
        
        {{ form_start(edit_form) }}

        {{ form_row(edit_form.name) }}
        {{ form_row(edit_form.route) }}

        <div class="signup-submit">
            <span>
                <input class="btn btn-primary  btn-flat" type="submit" value="Сохранить">
            </span>
        </div>   

        {{ form_end(edit_form) }}
    </div>
</div>
{% endblock %}
